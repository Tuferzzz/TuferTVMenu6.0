<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/x40dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/device_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x20dp"
        android:textColor="#000000"
        android:textSize="@dimen/sp20" />

    <ImageView
        android:id="@+id/device_connected_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="@dimen/x200dp"
        android:src="@drawable/check_success" />

</LinearLayout>