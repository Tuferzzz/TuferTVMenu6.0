<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout style="@style/time_sty_menu">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="@string/str_time_set_time_on_title"
                android:layout_width="107dip"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"></TextView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/line" >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="251dip"
            android:layout_marginTop="25dip">
            <!-- For Yes or No -->
            <LinearLayout
                android:id="@+id/linearlayout_time_power_on_switch"
                style="@style/time_sty_combo_btn">
                <ImageView style="@style/time_sty_leftarrow"></ImageView>
                <TextView
                    style="@style/time_sty_combo_name"
                    android:text="@string/str_time_set_time_on"
                    android:textColor="#FFFFFF" />
                <TextView
                    style="@style/time_sty_combo_indicator"
                    android:textColor="#FFFFFF" />
                <ImageView style="@style/time_sty_rightarrow"></ImageView>
            </LinearLayout>
            <!-- For hour -->
            <LinearLayout
                android:id="@+id/linearlayout_time_power_on_hour"
                style="@style/time_sty_simple_btn">
                <ImageView style="@style/time_sty_leftarrow"></ImageView>
                <TextView
                    style="@style/time_sty_combo_name"
                    android:text="@string/str_time_schedule_hour"
                    android:textColor="#FFFFFF" />
                <TextView
                    style="@style/time_sty_combo_indicator"
                    android:textColor="#FFFFFF" />
                <ImageView style="@style/time_sty_rightarrow"></ImageView>
            </LinearLayout>
            <!-- For minute -->
            <LinearLayout
                android:id="@+id/linearlayout_time_power_on_minute"
                style="@style/time_sty_simple_btn">
                <ImageView style="@style/time_sty_leftarrow"></ImageView>
                <TextView
                    style="@style/time_sty_combo_name"
                    android:text="@string/str_time_schedule_minute"
                    android:textColor="#FFFFFF" />
                <TextView
                    style="@style/time_sty_combo_indicator"
                    android:textColor="#FFFFFF" />
                <ImageView style="@style/time_sty_rightarrow"></ImageView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>